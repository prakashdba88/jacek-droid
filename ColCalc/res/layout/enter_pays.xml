<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/EnterPays_mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/EnterPays_TextView_Title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_height="wrap_content"
        android:text="@string/EnterPays_TextView_EnterPayPerEachPerson" />
    
    <CheckBox
        android:id="@+id/EnterPays_CheckBox_EverybodyPaysEqually"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big"
        android:text="@string/EnterPays_CheckBox_EqualPays" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big" >
        
        <TableRow
            android:id="@+id/EnterPays_Row_Name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/EnterPays_TextView_Name"
                android:layout_width="0dip"
				android:layout_weight="@string/table_column0_weight"
                android:layout_column="0"
                android:text="@string/EnterPays_TextView_Name" />

            <Button
                android:id="@+id/EnterPays_button_getPersonFromContacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="@string/EnterPays_button_getContact" />

            <EditText
                android:id="@+id/EnterPays_EditText_Name"
                android:layout_width="0dip"
				android:layout_weight="@string/table_column1_weight"
                android:layout_column="2"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:id="@+id/EnterPays_Row_Pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/EnterPays_TextView_Pay"
                android:layout_width="0dip"
				android:layout_weight="@string/table_column0_weight"
                android:layout_column="0"
                android:text="@string/EnterPays_TextView_Pay" />

            <EditText
                android:id="@+id/EnterPays_EditText_Pay"
                android:layout_width="0dip"
				android:layout_weight="@string/table_column1_weight"
                android:layout_column="1"
                android:inputType="numberDecimal"
                android:text="@string/EnterPays_TextView_ZeroValue" />
        </TableRow>
        
        <TableRow
            android:id="@+id/EnterPays_Row_ShouldPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/EnterPays_TextView_ShouldPay"
                android:layout_width="0dip"
				android:layout_weight="@string/table_column0_weight"
                android:layout_column="0"
                android:text="@string/EnterPays_TextView_ShouldPay" />

            <EditText
                android:id="@+id/EnterPays_EditText_ShouldPay"
                android:layout_width="0dip"
				android:layout_weight="@string/table_column1_weight"
                android:layout_column="1"
                android:inputType="numberDecimal"
                android:text="@string/EnterPays_TextView_ZeroValue" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/EnterPays_Button_AddPerson"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/EnterPays_Button_AddToList" />

        <Button
            android:id="@+id/enterPays_Button_Calculate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/EnterPays_Button_Calculate" />
    </LinearLayout>

   	<ListView
	    android:id="@+id/EnterPays_List_People"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_marginBottom="@dimen/margin_small"
	    android:layout_marginLeft="@dimen/margin_big"
	    android:layout_marginRight="@dimen/margin_big"
	    >
        
	</ListView>
</LinearLayout>