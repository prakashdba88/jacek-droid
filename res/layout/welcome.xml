<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/welcome_TextView_Title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/margin_ScreenBorderSmall"
        android:layout_marginTop="@dimen/margin_ScreenBorderSmall"
        android:layout_marginRight="@dimen/margin_ScreenBorderSmall"
        android:layout_marginBottom="@dimen/margin_SpanBetweenViewsBig"
        android:text="@string/welcome_TextView_title" />
    
    <Button
        android:id="@+id/welcome_Button_newCalculation"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/button_minWidth"
        android:layout_height="wrap_content"
        android:layout_above="@+id/welcome_Button_loadCalculation"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_SpanBetweenViewsSmall"
        android:text="@string/welcome_Button_newCalculation" />

    <Button
        android:id="@+id/welcome_Button_loadCalculation"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/button_minWidth"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_ScreenBorderBig"
        android:text="@string/welcome_Button_loadCalculation" />

</RelativeLayout>